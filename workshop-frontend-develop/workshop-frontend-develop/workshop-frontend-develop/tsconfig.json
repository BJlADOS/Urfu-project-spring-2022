{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es2017",
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "declaration": false,
    "removeComments": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "strict": true,
    "outDir": "build",
    "lib": [
      "es6",
      "es7",
      "dom"
    ],
    "baseUrl": "src",
    "paths": {
      "app/*": [
        "./app/*"
      ],
      "assets/*": [
        "./assets/*"
      ]
    }
  }
}